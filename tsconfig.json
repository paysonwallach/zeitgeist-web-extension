{
  "compilerOptions": {
    "target": "es2020",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": false,
    "jsx": "react",
    "declaration": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "incremental": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "source"
  },
  "include": ["source", "types"]
}
